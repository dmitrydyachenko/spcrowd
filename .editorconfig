root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.php]
indent_size = 4
indent_style = space

[*.scss]
indent_style = space
indent_size = 4

[*.js]
indent_style = tab
indent_size = 4

[*.jsx]
indent_style = tab
indent_size = 4

[*.yml]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[{package.json,composer.json}]
indent_style = space
indent_size = 2
