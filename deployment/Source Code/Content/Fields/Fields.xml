<Fields Group="CSA Group">
    <!-- Text Fields -->
    <Field Name="Strapline" DisplayName="Strapline" Type="Text"></Field>
    <Field Name="ItemEmail" DisplayName="Email" Type="Text"></Field>
    <Field Name="Phone1" DisplayName="Phone 1" Type="Text"></Field>
    <Field Name="Phone2" DisplayName="Phone 2" Type="Text"></Field>
    <Field Name="OfficeLocation" DisplayName="Location" Type="Text"></Field>
    
    <!-- Multiple lines of text Fields -->
    <Field Name="ItemContent" DisplayName="Content" Type="Note" NumLines="6" RichText="TRUE" RichTextMode="FullHtml"></Field>

    <!-- Boolean Fields -->
   <Field Name="IsRequired" DisplayName="Is Required" Type="Boolean"><Default>0</Default></Field>

    <!-- Hyperlink Fields -->
    <Field Name="ItemURL" DisplayName="URL" Type="URL"></Field>
    <Field Name="TicketLink" DisplayName="Ticket Link" Type="URL"></Field>
    <Field Name="DepartmentLink" DisplayName="Department Link" Type="URL"></Field>
    <Field Name="ServiceLink" DisplayName="Service Link" Type="URL"></Field>

    <!-- Number Fields -->
    <Field Name="ItemOrder" DisplayName="Order" Type="Number" Min="0" Decimals="0"><Default>0</Default></Field>
    <Field Name="NewsId" DisplayName="News Id" Type="Number" Min="0" Decimals="0"><Default>0</Default></Field>

    <!-- DateTime Fields -->
    

    <!-- Lookup Fields -->
    <Field Name="AppReference" DisplayName="App" Type="Lookup" List="MyApps" ShowField="Title"></Field>
    <Field Name="NavigationParent" DisplayName="Parent" Type="Lookup" List="Global Navigation" ShowField="Title"></Field>

    <!-- User Fields -->
    <Field Name="KeyContacts" DisplayName="Key Contacts" Type="UserMulti" Mult="TRUE" UserSelectionMode="PeopleOnly"></Field>
    <Field Name="SiteAdmin" DisplayName="Site Admin" Type="User" Mult="FALSE" UserSelectionMode="PeopleOnly"></Field>

    <!-- Choice Fields -->
    <Field Name="Region" DisplayName="Region" Type="Choice">
        <CHOICES>
            <CHOICE>Toronto</CHOICE>
            <CHOICE>Ottawa</CHOICE>
            <CHOICE>Montreal</CHOICE>
            <CHOICE>Montreal</CHOICE>
            <CHOICE>United States</CHOICE>
            <CHOICE>India</CHOICE>
            <CHOICE>Asia</CHOICE>
        </CHOICES>
    </Field>
    <Field Name="OfficeRegion" DisplayName="Office Region" Type="Choice">
        <CHOICES>
            <CHOICE>Toronto</CHOICE>
            <CHOICE>Ottawa</CHOICE>
            <CHOICE>Montreal</CHOICE>
            <CHOICE>Montreal</CHOICE>
            <CHOICE>United States</CHOICE>
            <CHOICE>India</CHOICE>
            <CHOICE>Asia</CHOICE>
        </CHOICES>
    </Field>
    <Field Name="LinkType" DisplayName="Type" Type="Choice">
        <CHOICES>
            <CHOICE>Top</CHOICE>
            <CHOICE>Media buttons</CHOICE>
            <CHOICE>Bottom</CHOICE>
        </CHOICES>
    </Field>
    <Field Name="NewsCategory" DisplayName="News Category" Type="Choice">
        <CHOICES>
            <CHOICE>News</CHOICE>
            <CHOICE>Beyond 100</CHOICE>
        </CHOICES>
    </Field>
    <Field Name="Tags" DisplayName="Tags" Type="MultiChoice">
        <CHOICES>
            <CHOICE>Tag 1</CHOICE>
            <CHOICE>Tag 2</CHOICE>
            <CHOICE>Tag 3</CHOICE>
            <CHOICE>Tag 4</CHOICE>
        </CHOICES>
    </Field>    
</Fields>
